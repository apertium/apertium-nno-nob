#!/bin/bash

sourced () {
    [[ "$0" != "${BASH_SOURCE[0]}" ]]
}

main () {
    set -e -u
    apertium -d . nob-nno "$@"
}

declare -a vars=(
    # Monodix preferences:
    infa_infe
    me_vi
    ggj_gg
    kj_k
    er_ar
    tek_tar
    vart_blei
    vit_vett
    # Bidix preferences:
    motsetning_motsetnad
    kviss_quiz
    blomster_blome
    itilfelle_ifall
    veps_kvefs
    derfor_difor
    skapet_skapen
    voks_vaks
    mengd_mengde
    apa_apen
    banen_bana
    verken_korkje
    røyndom_røynd
    beskrive_skildre
    korstog_krossferd
    blå_blåe
    lét_let
)
export AP_SETVAR="$(tr ' ' ',' <<< "${vars[@]}" )"

sourced || main "$@"
